<div class="journeys-body">
  <div id="title">
    <h5>Journeys</h5>
  </div>
  <div class="row">
    <% @journeys.each do |journey| %>
      <div class="col-10 col-md-5 col-lg-4">
        <div class="card">
          <%= link_to journey_path(journey) do %>
            <div class="card-body">
              <h3 class="card-title" style = "text-transform:capitalize;"><%= journey.title %></h3>
              <p class="card-text"> <%= time_ago_in_words journey.start_date %> ago </p>
              <!--  <%= link_to "See Journey", journey_path(journey) %> -->
            </div>
          <% end %>
          <div class="options text-right" >
            <% if policy(journey).destroy? %>
              <%= link_to journey_path(journey), method: :delete, data: { confirm: "Are you sure you wanna destroy it?" } do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
