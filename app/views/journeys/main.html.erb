<div class="container">
  <h1>ember</h1>
</div>
<!-- <div class="main-background"> -->
<div>
  <div class="position">
    <div class="row row-main">
      <li class="action main-button round">
        <%= link_to "Create New Journey", new_journey_path %>
      </li>
    </div>
    <% unless @current_user.journeys.last.nil? %>
      <div class="row row-main">
        <div class="choose_action">
          <li class="action main-button round">
            <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Continue Journey</a>
          </li>
          <div class="collapse round" id="collapseExample">
            <div class="icon-background">
              <% last_journey = @current_user.journeys.last %>
              <p id="new_picture" class="main-icons inline">
                <%= link_to new_journey_picture_path(last_journey) do %>
                  <i class="fas fa-camera" aria-hidden="true"></i>
                <% end %>
              </p>
              <p class="main-icons inline">
                <%= link_to new_journey_video_path(last_journey) do %>
                  <i class="fas fa-video" aria-hidden="true"></i>
                <% end %>
              </p>
              <p class="main-icons inline">
                <%= link_to new_journey_audio_path(last_journey) do %>
                  <i class="fas fa-microphone" aria-hidden="true"></i>
                <% end %>
              </p>
              <p class="main-icons inline">
                <%= link_to new_journey_note_path(last_journey) do %>
                  <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row row-main">
      <li class="action main-button round">
        <%= link_to "Journey Albums", journeys_path %>
      </li>
    </div>
  </div>
</div>
